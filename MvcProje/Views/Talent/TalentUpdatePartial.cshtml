@model EntityLayer.Concrete.Talents

<a class="btn btn-primary text-light" href="/Talent/TalentUpdatePartial/6" data-toggle="modal" data-target="#ModalUpdate">
    Yetenek Düzenleme
</a>
<div class="modal" id="ModalUpdate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="model-header p-1">
                <h2 class="modal-title">
                    Yetenek Bilgisi
                </h2>
            </div>
            <form method="post" action="/Talent/TalentUpdate">
                <div class="modal-body">
                    <label>Yetenek Adı</label>
                    <input type="text" name="TalentName" class="form-control" value="@Model.TalentName" required />
                    <br />
                    <label>Yetenek Bilgisi</label>
                    <input type="text" name="Knowledge" class="form-control" pattern="^[0-9]*$" maxlength="3" title="Sadece Rakam Giriniz!!!" value="@Model.Knowledge" required />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

