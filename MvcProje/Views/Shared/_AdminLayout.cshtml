                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <aside class="sidebar2 sidebar-dark-primary" id="openNav">
            <!-- Brand Logo -->
            <div class="brand-link">
                <i class="nav-icon fas fa-bars" onclick="w3_open()"></i>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" id="main">
            <!-- Main content -->
            <div class="content">
                @RenderBody()
                <!-- /.container-fluid -->
