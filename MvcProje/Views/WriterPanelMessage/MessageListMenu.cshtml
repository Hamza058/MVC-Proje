
@{
    ViewBag.Title = "MessageListMenu";
    Layout = null;
}

<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Folders</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-gradient-indigo float-right">@ViewBag.Invalue</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilmiş Mesajlar
                        <span class="badge bg-success float-right">@ViewBag.Sendvalue</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/GetMessageNotRead/" class="nav-link">
                        <i class="fa fa-envelope"></i> Okunmamış Mesajlar
                        <span class="badge bg-danger float-right">@ViewBag.Notread</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Spam
                        <span class="badge bg-warning float-right">65</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Labels</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="far fa-circle text-danger"></i> Önemliler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="far fa-circle text-warning"></i> Tanıtımlar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="far fa-circle text-primary"></i> Sosyal Medya</a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
</div>

